<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f8f8f8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45">

            <TextView
                android:id="@+id/tv_header_arrow_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/xialashuaxin"
                android:textSize="14sp"
                android:textColor="@color/text_gray_light"
                android:singleLine="true"/>

            <RelativeLayout
                android:layout_width="24dp"
                android:layout_height="31dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_header_arrow_refresh"
                android:layout_marginRight="30dp">

                <ImageView
                    android:id="@+id/iv_header_arrow_arrow"
                    android:layout_width="19dp"
                    android:layout_height="31dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/pull_icon_big"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/iv_header_arrow_refreshing"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/loading"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_header_arrow_success"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/refresh_succeed"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>